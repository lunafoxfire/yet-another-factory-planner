{
  "name": "yet-another-factory-planner-client",
  "version": "0.0.0",
  "private": true,
  "repository": {
    "type": "git",
    "directory": "git+https://github.com/lydianlights/yet-another-factory-planner.git"
  },
  "homepage": "https://www.satisfactory-planner.net",
  "scripts": {
    "start": "craco start",
    "build": "craco build",
    "build:staging": "env-cmd -f .env.staging craco build",
    "predeploy": "npm run build && echo www.satisfactory-planner.net > ./build/CNAME",
    "deploy": "gh-pages -d build",
    "predeploy:staging": "npm run build:staging",
    "deploy:staging": "gh-pages -d build-staging -o staging",
    "parse-docs": "node ./scripts/parse-docs.mjs"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@craco/craco": "^6.4.0",
    "@fortawesome/fontawesome-svg-core": "^1.3.0-beta3",
    "@fortawesome/free-brands-svg-icons": "^6.0.0-beta3",
    "@fortawesome/react-fontawesome": "^0.1.16",
    "@mantine/core": "^3.3.4",
    "@mantine/hooks": "^3.3.4",
    "chroma-js": "^2.1.2",
    "cytoscape": "^3.20.0",
    "cytoscape-klay": "^3.1.4",
    "cytoscape-popper": "^2.0.0",
    "env-cmd": "^10.1.0",
    "gh-pages": "^3.2.3",
    "glpk.js": "^4.0.1",
    "lodash": "^4.17.21",
    "nanoid": "^3.1.30",
    "react": "^17.0.2",
    "react-cytoscapejs": "^1.2.1",
    "react-dom": "^17.0.2",
    "react-feather": "^2.0.9",
    "react-scripts": "4.0.3",
    "seedrandom": "^3.0.5",
    "styled-components": "^5.3.3",
    "typescript": "^4.5.2",
    "web-vitals": "^2.1.2"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.15.0",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.5.0",
    "@types/chroma-js": "^2.1.3",
    "@types/cytoscape": "^3.19.0",
    "@types/cytoscape-popper": "^2.0.0",
    "@types/jest": "^27.0.3",
    "@types/lodash": "^4.14.177",
    "@types/node": "^16.11.9",
    "@types/react": "^17.0.35",
    "@types/react-cytoscapejs": "^1.2.2",
    "@types/react-dom": "^17.0.11",
    "@types/seedrandom": "^3.0.1",
    "@types/styled-components": "^5.1.15",
    "babel-plugin-styled-components": "^2.0.1",
    "satisfactory-docs-parser": "^5.0.0"
  }
}
